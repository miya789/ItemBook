<h1>Things#index</h1>
<p>Find me in app/views/things/index.html.erb</p>
<div>
    <%= link_to("Create", "/things/new") %>
</div>

<ul>
    <% @things.each do |thing| %>
        <% if thing.category == "clothes" %>
            <div class="clothes">
                <li><%= link_to("#{thing.name}", "/things/#{thing.id}") %></li>
            </div>
        <% elsif thing.category == "book" %>
            <div class="book">
                <li><%= link_to("#{thing.name}", "/things/#{thing.id}") %></li>
            </div>
        <% else %>
            <div>
                <li><%= link_to("#{thing.name}", "/things/#{thing.id}") %></li>
            </div>
        <% end %>
    <% end %>
</ul>