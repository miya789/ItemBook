<h1>Edit</h1>

<%= form_tag("/things/#{@thing.id}/update") do %>
    <p>Name</p>
    <input name="name" value="<%= @thing.name %>"></input>
    <p>Category</p>
    <select name="category" value="<%= @thing.category %>">
        <option value="">blank</option>
        <option value="book">book</option>
        <option value="clothes">clothes</option>
    </select>
    <input type="submit" value="update"></input>
<% end %>